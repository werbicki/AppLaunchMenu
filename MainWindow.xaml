<?xml version="1.0" encoding="utf-8" ?>
<local:WindowNotifyPropertyChanged
    x:Class="AppLaunchMenu.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppLaunchMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <local:WindowNotifyPropertyChanged.SystemBackdrop>
        <MicaBackdrop Kind="Base" />
    </local:WindowNotifyPropertyChanged.SystemBackdrop>

    <Grid x:Name="RootElement">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar x:Name="TitleBar" Title="{x:Bind AppTitle, Mode=OneWay}">
            <TitleBar.IconSource>
                <FontIconSource Glyph="&#xF4AA;" />
            </TitleBar.IconSource>
        </TitleBar>

        <Frame x:Name="InnerFrame" Grid.Row="1" />
    </Grid>

</local:WindowNotifyPropertyChanged>
