<?xml version="1.0" encoding="utf-8"?>
<local:WindowNotifyPropertyChanged
    x:Class="AppLaunchMenu.Dialogs.ModalDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppLaunchMenu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Activated="Window_Activated"
    SizeChanged="Window_SizeChanged"
    >

    <local:WindowNotifyPropertyChanged.SystemBackdrop>
        <MicaBackdrop />
    </local:WindowNotifyPropertyChanged.SystemBackdrop>

    <StackPanel x:Name="RootElement" 
            Orientation="Vertical"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,0,0,0"
            SizeChanged="RootElement_SizeChanged"
            KeyDown="RootElement_KeyDown"
            >

        <Frame x:Name="InnerFrame"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                Margin="20,20,20,20"
                >
            <Page x:Name="InnerPage"
                    Grid.Row="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    >
                <TextBlock x:Name="InnerMessage" 
                            Margin="5,5,5,5"
                            TextAlignment="Center" 
                            Text="{Binding Message, Mode=OneWay}" 
                            />
            </Page>
        </Frame>

        <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="10,10,10,10"
                >
            <Button x:Name="PrimaryButton" 
                    Content="{Binding PrimaryButtonText, Mode=TwoWay}" 
                    Visibility="{x:Bind PrimaryButtonVisible, Mode=OneWay}"
                    Margin="5,5,5,5"
                    Height="35" 
                    Width="80"
                    Click="PrimaryButton_Click" 
                    />
            <Button x:Name="SecondaryButton" 
                    Content="{Binding SecondaryButtonText, Mode=TwoWay}" 
                    Visibility="{x:Bind SecondaryButtonVisible,Mode=OneWay}"
                    Margin="5,5,5,5"
                    Height="35" 
                    Width="80"
                    Click="SecondaryButton_Click" 
                    />
            <Button x:Name="CloseButton" 
                    Content="{Binding CloseButtonText, Mode=TwoWay}" 
                    Visibility="{x:Bind CloseButtonVisible, Mode=OneWay}" 
                    Margin="5,5,5,5"
                    Height="35" 
                    Width="80"
                    Click="CloseButton_Click" 
                    />
        </StackPanel>
    </StackPanel>
</local:WindowNotifyPropertyChanged>
