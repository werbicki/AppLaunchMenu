<?xml version="1.0" encoding="utf-8" ?>
<local:WindowNotifyPropertyChanged
    x:Class="AppLaunchMenu.Dialogs.ModalDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppLaunchMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <local:WindowNotifyPropertyChanged.SystemBackdrop>
        <MicaBackdrop />
    </local:WindowNotifyPropertyChanged.SystemBackdrop>

    <Frame
        x:Name="OuterFrame"
        Margin="0,20,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="75" />
            </Grid.RowDefinitions>

            <Frame
                x:Name="InnerFrame"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Page
                    x:Name="InnerPage"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                        x:Name="InnerMessage"
                        Margin="5,5,5,5"
                        Text="{Binding Message, Mode=OneWay}"
                        TextAlignment="Center" />
                </Page>
            </Frame>

            <StackPanel
                Grid.Row="1"
                Margin="10,10,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="PrimaryButton"
                    Width="80"
                    Height="35"
                    Margin="5,5,5,5"
                    Click="PrimaryButton_Click"
                    Content="{Binding PrimaryButtonText, Mode=TwoWay}"
                    Visibility="{x:Bind PrimaryButtonVisible, Mode=OneWay}" />
                <Button
                    x:Name="SecondaryButton"
                    Width="80"
                    Height="35"
                    Margin="5,5,5,5"
                    Click="SecondaryButton_Click"
                    Content="{Binding SecondaryButtonText, Mode=TwoWay}"
                    Visibility="{x:Bind SecondaryButtonVisible, Mode=OneWay}" />
                <Button
                    x:Name="CloseButton"
                    Width="80"
                    Height="35"
                    Margin="5,5,5,5"
                    Click="CloseButton_Click"
                    Content="{Binding CloseButtonText, Mode=TwoWay}"
                    Visibility="{x:Bind CloseButtonVisible, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </Frame>

</local:WindowNotifyPropertyChanged>
