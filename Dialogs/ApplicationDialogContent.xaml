<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppLaunchMenu.Dialogs.ApplicationDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppLaunchMenu.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:AppLaunchMenu.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ApplicationViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        HorizontalScrollMode="Enabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Margin="5,5,5,0" Text="Name" />
            <TextBox
                Margin="5,5,5,15"
                Text="{Binding Name, Mode=TwoWay}"
                TextWrapping="NoWrap" />
            <TextBlock Text="Executable" />
            <TextBox
                Margin="5,5,5,0"
                Text="{Binding Executable, Mode=TwoWay}"
                TextWrapping="NoWrap" />
            <TextBlock Text="Working Directory" />
            <TextBox
                Margin="5,5,5,15"
                Text="{Binding WorkingDirectory, Mode=TwoWay}"
                TextWrapping="NoWrap" />
            <TextBlock Margin="5,5,5,0" Text="Parameters" />
            <TextBox
                Margin="5,5,5,5"
                Text="{Binding Parameters, Mode=TwoWay}"
                TextWrapping="NoWrap" />
            <TextBlock Margin="5,5,5,0" Text="Is Reservable?" />
            <CheckBox
                Margin="5,5,5,5"
                Content="Reservable"
                IsChecked="{Binding IsReservable, Mode=TwoWay}" />
            <TextBlock Margin="5,5,5,0" Text="Resrvation Description" />
            <TextBox
                Margin="5,5,5,5"
                Text="{Binding ReservationDescription, Mode=TwoWay}"
                TextWrapping="NoWrap" />
            <TextBlock Margin="5,5,5,0" Text="Resrvation Date" />
            <CalendarDatePicker Margin="5,5,5,0" Date="{Binding ReservationDate, Mode=TwoWay}" />
            <TextBlock Margin="5,5,5,0" Text="Resrvation Owner" />
            <TextBox
                Margin="5,5,5,5"
                Text="{Binding ReservationOwner, Mode=TwoWay}"
                TextWrapping="NoWrap" />
        </StackPanel>
    </ScrollViewer>
</Page>
