<?xml version="1.0" encoding="utf-8"?>
<Page
        x:Class="AppLaunchMenu.Dialogs.FolderDialogContent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:AppLaunchMenu.Dialogs"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="using:AppLaunchMenu.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:FolderViewModel}"
        mc:Ignorable="d"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Width="200"
        >

    <StackPanel 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            >
        
        <TextBlock 
                Text="Name" 
                Margin="5,5,5,0" 
                />
        <TextBox
                Text="{Binding Name, Mode=TwoWay}" 
                TextWrapping="NoWrap" 
                Margin="5,5,5,15" 
                />
        <TextBlock 
                Text="Is expanded by default?" 
                Margin="5,5,5,0" 
                />
        <CheckBox 
                IsChecked="{Binding Expanded, Mode=TwoWay}" 
                Content="Expanded" 
                Margin="5,5,5,5" 
                />
        
    </StackPanel>
</Page>
